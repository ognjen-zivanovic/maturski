<UserControl x:Class="HotelRezervacije.StavkaPogodnostiAdmin" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Name="GlavniGrid">
        <StackPanel Orientation="Horizontal">
            <TextBlock Name="PogodnostIkonica" FontFamily="{StaticResource UnikodFont}" FontSize="18" />
            <TextBlock Name="PogodnostIme" Margin="5,0,10,0" FontSize="18" />
        </StackPanel>
        <Button Name="ObrisiDugme" Width="22" Height="22" Padding="0" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Red" BorderThickness="0" Click="ObrisiDugme_Click" Content="X" Cursor="Hand" FontSize="10" Foreground="White" Style="{x:Null}" Visibility="Hidden" />
    </Grid>
</UserControl>
